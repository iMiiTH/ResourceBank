<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    <url-mapping id="publicProgram">
        <pattern value="/programs/#{uriProgramShortName}" />
        <view-id value="/programs/program.xhtml" />
    </url-mapping>
    <url-mapping id="adminProgram">
        <pattern value="/admin/programs/#{uriProgramShortName}" />
        <view-id value="/admin/programs/program.xhtml" />
    </url-mapping>

    <url-mapping id="publicCourse">
        <pattern value="/courses/#{uriCourseCode}" />
        <view-id value="/courses/course.xhtml"/>
    </url-mapping>

    <url-mapping id="adminExam">
        <pattern value="/admin/exams/modify/#{uriExamId}" />
        <view-id value="/admin/exams/exam.xhtml"/>
    </url-mapping>

</pretty-config>